<div id="welcome" class="container text-white">
	<div class="row row-cols-2">
		<div id="siteInfo" class="col-md-8">
			<h1>Monkeys VS Shakespeare</h1>
			<p>Site info</p>
		</div>
		<div class="col-md-1">
		</div>
		<div id="loginForm" class="col-md-3">
			<form>
				<div class="form-group">
					<label for="login">Email address</label>
					<input type="email" class="form-control" id="login-email" aria-describedby="emailHelp">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="form-control" id="login-password">
				</div>
				<button id="loginBtn" type="submit" class="btn btn-primary">Login</button>
				<button id="startSignUpBtn" type="button" class="btn btn-primary" data-toggle="modal"
					data-target="#signUpModal">Sign Up</button>
				<!-- Modal -->
				<div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel"
					aria-hidden="true">
					<div class="modal-dialog">
						<div id="modalColor" class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="signUpModalLabel">Sign Up</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<form>
									<div class="form-group">
										<label for="new-username-form">Username</label>
										<input type="text" class="form-control" id="new-username-form"
											aria-describedby="emailHelp">
									</div>
									<div class="form-group">
										<label for="new-email-form">Email address</label>
										<input type="email" class="form-control" id="new-email-form"
											aria-describedby="emailHelp">
										<small id="emailHelp" class="form-text text-muted">We'll never share your email
											with anyone else.</small>
									</div>
									<div class="form-group">
										<label for="new-password-form">Password</label>
										<input type="password" class="form-control" id="new-password-form">
									</div>
								</form>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
								<button type="button" class="btn btn-primary">Sign Up</button>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<script src="./js/login.js"></script>